{{> header}}
{{> menu}}
<section id="viewDiscover">
    <div class="content">
        <div class="chirps">
            <h2 class="titlebar">Discover</h2>
            <div id="userlist">
                {{#each users}}
                    {{#if me}}
                        <div class="userbox">
                            <div><a href="#/user/{{username}}" class="chirp-author">{{username}}</a></div>

                            <div class="user-details">
                                <span>{{followers}} followers</span>
                            </div>
                        </div>
                    {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
</section>
{{> footer}}