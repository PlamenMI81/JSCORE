{{> header}}
{{> menu}}
<section id="viewFeed">
    <div class="content">
        <div class="chirper">

            <h2 class="titlebar">{{username}}</h2>
            {{#if me}}
                <form action="#/createchirp" method="post" id="formSubmitChirp" class="chirp-form">
                    <textarea name="text" class="chirp-input"></textarea>
                    <input class="chirp-submit" id="btnSubmitChirp" value="Chirp" type="submit">
                </form>
            {{else}}
                <a id="btnFollow" class="chirp-author" href="#/{{username}}/{{followStatus}}">{{followStatus}}</a>
            {{/if}}

            <div id="userStats" class="user-details">
                <span>{{chirpsCount}} chirps</span> | <span>{{followingCount}} following</span> |
                <span>{{followersCount}} followers</span>
            </div>
        </div>
        <div id="chirps" class="chirps"><h2 class="titlebar">Chirps</h2>
            {{#if chirps}}
                {{#each chirps}}
                    {{> chirp}}
                {{/each}}
            {{else}}
                <div class="chirp"><span class="loading">No chirps in database</span></div>
            {{/if}}
        </div>
    </div>
</section>
{{> footer}}