<section id="viewEditAd" class="viewEditAd">
    <h1 class="titleForm">Edit existing advertisement</h1>
    <form id="formEditAd" class="form">
        <div><input type="hidden" name="id" required value="{{this._id}}"/></div>
        <div><input type="hidden" name="publisher" required value="{{this.publisher}}"/></div>
        <div><input type="hidden" name="viewCount" required value="{{this.viewCount}}"/></div>
        <div>Title:</div>
        <div><input type="text" name="title" required value="{{this.title}}"/></div>
        <div>Description:</div>
        <div><textarea name="description" rows="10" required>{{this.description}}</textarea></div>
        <div>Date Published:</div>
        <div><input type="date" name="datePublished" required value="{{this.dateOfpublishing}}"/></div>
        <div>Price:</div>
        <div><input type="number" step="0.01" name="price" required value="{{this.price}}"/></div>
        <div>Image:</div>
        <div><input type="text" name="image" required value="{{this.image}}"/></div>
        <div><input type="button" id="buttonEditAd" value="Edit"/></div>
    </form>
</section>