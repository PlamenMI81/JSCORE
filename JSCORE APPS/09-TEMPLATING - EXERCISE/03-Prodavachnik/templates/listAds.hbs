<section id="viewAds" class="viewAds">
    <h1 class="titleForm">Advertisements</h1>
    <div id="ads" class="ads">
        <table>
            <tr>
                <th>Title</th>
                <th>Publisher</th>
                <th>Description</th>
                <th>Price</th>
                <th>Date Published</th>
                <th>Actions</th>
            </tr>
            {{#each res}}
                <tr>
                    <td style="display: none">{{this._id}}</td>
                    <td>{{this.title}}</td>
                    <td>{{this.publisher}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.dateOfpublishing}}</td>
                    <td>
                        <a id="readMore" href="#" title="Read more...">&#9906</a>
                        {{!--{{#if isAuthor}}--}}
                        <a id="edit" href="#" title="Edit...">&#9998</a>
                        <a id="delete" href="#" title="Delete">&#10006</a>
                        {{!--{{/if}}--}}
                    </td>
                </tr>
            {{/each}}
        </table>
    </div>
</section>