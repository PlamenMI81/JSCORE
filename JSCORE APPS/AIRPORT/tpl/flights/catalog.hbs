{{> menu-r}}
<section id="viewCatalog" class="background-img">
    <a href="#/addflight" class="add-flight">Add Flight +</a>

    <div class="added-flights">
        {{#each flights}}
        <a href="#/detail/{{_id}}" class="added-flight">
            <img src="{{image}}" alt="" class="picture-added-flight">
            <h3>{{destination}}</h3>
            <span>from {{origin}}</span><span>{{departuretime}}</span>
        </a>
        {{/each}}

    </div>
</section>
{{> footer}}